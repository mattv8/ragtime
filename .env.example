# =============================================================================
# Ragtime RAG API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database Configuration (Prisma)
# -----------------------------------------------------------------------------
# PostgreSQL connection URL for Prisma ORM (ragtime internal database)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ragtime:ragtime_dev@ragtime-db:5432/ragtime

# -----------------------------------------------------------------------------
# FAISS Vector Index Configuration
# -----------------------------------------------------------------------------
# Comma-separated paths to FAISS index directories (relative to /app)
FAISS_INDEX_PATHS=.data/odoo,.data/codebase

# Indexer settings (for the indexer worker service)
ENABLE_INDEXER=true
INDEX_DATA_PATH=/ragtime/data

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable tool calling globally
ENABLE_TOOLS=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# API Key for authentication (leave empty to disable)
API_KEY=

# CORS allowed origins (comma-separated, or * for all)
ALLOWED_ORIGINS=*

# Server ports
PORT=8000
INDEXER_PORT=8001

# Debug mode (enables verbose logging and auto-reload)
DEBUG_MODE=false
