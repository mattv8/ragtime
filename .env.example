# =============================================================================
# Ragtime RAG API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=8000
INDEXER_PORT=8001

# -----------------------------------------------------------------------------
# Database Configuration (Prisma)
# -----------------------------------------------------------------------------
# PostgreSQL connection URL for Prisma ORM (ragtime internal database)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ragtime:ragtime_dev@ragtime-db:5432/ragtime

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# API Key for authentication (leave empty to disable)
API_KEY=

# CORS allowed origins (comma-separated, or * for all)
ALLOWED_ORIGINS=*

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# JWT secret key (auto-generated if not set - MUST set for production!)
# JWT_SECRET_KEY=your-secret-key-here

# Local admin fallback account (always works when LDAP is unreachable)
# You must set a password here to enable local admin login
LOCAL_ADMIN_USER=admin
LOCAL_ADMIN_PASSWORD=
