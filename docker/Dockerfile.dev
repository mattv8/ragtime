# =============================================================================
# Ragtime - Development Dockerfile
# =============================================================================
# Unified container for RAG API + Indexer (development)

FROM python:3.12-slim

# Environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/ragtime

# Install system dependencies including Node.js for frontend dev
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    libmagic1 \
    ca-certificates \
    gnupg \
    openssh-client \
    nfs-common \
    cifs-utils \
    smbclient \
    libnfs14 \
    libnfs-utils \
    libnfs-dev \
    # Add PostgreSQL APT repository for version 18 client
    && curl -fsSL https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /usr/share/keyrings/postgresql.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/postgresql.gpg] http://apt.postgresql.org/pub/repos/apt $(. /etc/os-release && echo "$VERSION_CODENAME")-pgdg main" > /etc/apt/sources.list.d/pgdg.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends postgresql-client-18 \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    # Install Docker CLI (for container-to-container communication)
    && install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/debian/gpg -o /etc/apt/keyrings/docker.asc \
    && chmod a+r /etc/apt/keyrings/docker.asc \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/debian $(. /etc/os-release && echo "$VERSION_CODENAME") stable" > /etc/apt/sources.list.d/docker.list \
    && apt-get update \
    && apt-get install -y docker-ce-cli \
    && rm -rf /var/lib/apt/lists/*

# Create working directory and data directory
WORKDIR /ragtime
RUN mkdir -p /ragtime/data/faiss_index

# Copy requirements first for better layer caching
COPY requirements.txt /ragtime/requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /ragtime/requirements.txt

# Copy frontend package.json for npm install layer caching
COPY ragtime/frontend/package.json ragtime/frontend/package-lock.json* /ragtime/ragtime/frontend/
RUN cd /ragtime/ragtime/frontend && npm ci --loglevel=error

# Copy entrypoint and scripts
COPY docker/entrypoint.sh /entrypoint.sh
COPY docker/scripts/backup-restore.sh /docker-scripts/backup-restore.sh

# Make scripts executable and create convenience command wrappers
RUN chmod +x /entrypoint.sh /docker-scripts/backup-restore.sh \
    && ln -sf /docker-scripts/backup-restore.sh /usr/local/bin/backup \
    && ln -sf /docker-scripts/backup-restore.sh /usr/local/bin/restore

# Expose ports (API on 8000, Vite dev server on 8001)
EXPOSE 8000 8001

ENTRYPOINT ["/entrypoint.sh"]
